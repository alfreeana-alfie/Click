        <activity android:name="com.ketekmall.ketekmall.activities.list.CartList" />
        <activity
            android:name="com.ketekmall.ketekmall.activities.users.UserProfile"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.ketekmall.ketekmall.activities.chats.ChatList"
            android:windowSoftInputMode="adjustPan" />
