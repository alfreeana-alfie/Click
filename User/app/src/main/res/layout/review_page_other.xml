<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorAccent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:elevation="0dp"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:id="@+id/order_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appbar"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/appbar">

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@drawable/background_white_full_curves"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="Order" />

                        <TextView
                            android:id="@+id/order_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/open_sans"
                            android:text="Order ID" />

                    </LinearLayout>


                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/linear_detail"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/colorLightGrey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="TRACKING NO." />

                        <TextView
                            android:id="@+id/tracking_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"
                            android:fontFamily="@font/open_sans"
                            android:textColor="#FF0000"
                            android:text="TRACKING NO." />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans"
                        android:textSize="12sp"
                        android:text="(Click tracking number to view)" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="SHIPPED TO" />

                        <TextView
                            android:id="@+id/address_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/open_sans"
                            android:text="ADDRESS USER SEND" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="DATE ORDER" />

                        <TextView
                            android:id="@+id/date_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/open_sans"
                            android:text="DATE ORDER" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="DATE RECEIVED" />

                        <TextView
                            android:id="@+id/date_received"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/open_sans"
                            android:text="DATE RECEIVED" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="STATUS:" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/ordered_black"
                                android:layout_below="@id/ordered"
                                android:layout_centerHorizontal="true"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@mipmap/ic_ordered_black_foreground" />

                            <ImageView
                                android:id="@+id/ordered_green"
                                android:layout_below="@id/ordered"
                                android:layout_centerHorizontal="true"
                                android:visibility="gone"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:srcCompat="@mipmap/ic_ordered_green_foreground" />

                            <TextView
                                android:id="@+id/ordered"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/open_sans_bold"
                                android:padding="10dp"
                                android:text="Ordered"
                                android:textAlignment="center"
                                android:textSize="11sp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/pending_black"
                                android:layout_below="@id/pending"
                                android:layout_centerHorizontal="true"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@mipmap/ic_pending_black_foreground" />

                            <ImageView
                                android:id="@+id/pending_green"
                                android:layout_below="@id/pending"
                                android:layout_centerHorizontal="true"
                                android:visibility="gone"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:srcCompat="@mipmap/ic_pending_green_foreground" />

                            <TextView
                                android:id="@+id/pending"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/open_sans_bold"
                                android:padding="10dp"
                                android:text="Pending"
                                android:textAlignment="center"
                                android:textSize="11sp" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/shipped_black"
                                android:layout_below="@id/shipped"
                                android:layout_centerHorizontal="true"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@mipmap/ic_shipped_black_foreground" />

                            <ImageView
                                android:id="@+id/shipped_green"
                                android:layout_below="@id/shipped"
                                android:layout_centerHorizontal="true"
                                android:visibility="gone"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:srcCompat="@mipmap/ic_shipped_green_foreground" />

                            <TextView
                                android:id="@+id/shipped"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/open_sans_bold"
                                android:padding="10dp"
                                android:text="Shipped"
                                android:textAlignment="center"
                                android:textSize="11sp" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/received_black"
                                android:layout_below="@id/received"
                                android:layout_centerHorizontal="true"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@mipmap/ic_received_black_foreground" />

                            <ImageView
                                android:id="@+id/received_green"
                                android:layout_below="@id/received"
                                android:layout_centerHorizontal="true"
                                android:visibility="gone"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:srcCompat="@mipmap/ic_received_green_foreground" />

                            <TextView
                                android:id="@+id/received"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/open_sans_bold"
                                android:padding="10dp"
                                android:text="Received"
                                android:textAlignment="center"
                                android:textSize="11sp" />
                        </RelativeLayout>

                    </LinearLayout>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/rejected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:background="#FF0000"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:text="REJECTED" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/finished"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:background="@color/colorGreen"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:text="FINISHED" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear1"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/background_white_full_curves"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/photo"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            tools:srcCompat="@tools:sample/avatars" />

                        <TextView
                            android:id="@+id/text_ad_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/photo"
                            android:fontFamily="@font/open_sans_semibold"
                            android:padding="10dp"
                            android:text="Ad Detail"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/text_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/text_quantity"
                            android:layout_toEndOf="@id/photo"
                            android:fontFamily="@font/open_sans"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="MYR0.00"
                            android:textColor="@color/colorGrey"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/text_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/photo"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/open_sans"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="x1"
                            android:textColor="@color/colorGrey"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/linear_detail"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/colorLightGrey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/open_sans"
                            android:text="Sub Total" />

                        <TextView
                            android:id="@+id/sub_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:text="Sub Total"
                            android:textAlignment="textEnd" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/open_sans"
                            android:text="Shipping Total" />

                        <TextView
                            android:id="@+id/ship_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Shipping Total"
                            android:textAlignment="textEnd" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="Grand Total" />

                        <TextView
                            android:id="@+id/grand_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="Grand Total"
                            android:textAlignment="textEnd" />
                    </LinearLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/btn_received"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/login_part_border_orange"
                    android:text="Received"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
            </RelativeLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/review_layout"
            android:visibility="gone"
            android:layout_margin="15dp"
            android:background="@color/colorWhite"
            android:layout_below="@id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/review_layout1"
                android:fontFamily="@font/open_sans_condensed_bold"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:text="Review"/>

            <View
                android:id="@+id/view3"
                android:layout_width="100dp"
                android:layout_height="5dp"
                android:layout_below="@id/review_layout1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_part_border_orange" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view3"
                android:layout_centerHorizontal="true"
                android:numStars="5"
                android:layout_marginTop="10dp"
                android:paddingStart="0dp"
                android:paddingTop="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="0dp"
                android:rating="4"
                android:theme="@style/MyRatingBar" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_layout"
                android:layout_below="@id/ratingBar"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_border"
                android:layout_width="match_parent"
                android:layout_height="170dp">

                <EditText
                    android:id="@+id/editText_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ratingBar"
                    android:background="@null"
                    android:ems="10"
                    android:padding="15dp"
                    android:inputType="textMultiLine"
                    android:hint="Write a Review"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:cursorVisible="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_layout"
                android:background="@drawable/login_part_border_orange"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="16sp"
                android:text="Submit" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_submit"
                android:background="@drawable/login_part_border_orange"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="16sp"
                android:text="Cancel" />

        </RelativeLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>