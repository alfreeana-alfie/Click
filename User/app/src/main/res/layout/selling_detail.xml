<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:padding="5dp"
            android:text="Order ID"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/text_order_id"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/text_ad_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_order_id"
            android:layout_toEndOf="@id/photo"
            android:fontFamily="@font/open_sans_semibold"
            android:padding="10dp"
            android:text="Ad Detail"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/text_quantity"
            android:layout_toEndOf="@id/photo"
            android:fontFamily="@font/open_sans"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="MYR0.00"
            android:textColor="@color/colorGrey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/linearLayout"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/open_sans"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="x1"
            android:textColor="@color/colorGrey"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_placed_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:padding="10dp"
                android:text="Placed on YYYY-MM-DD"
                android:textColor="@color/colorGrey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:padding="10dp"
                android:text="Status"
                android:textAlignment="textEnd"
                android:textColor="@color/colorGrey"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:fontFamily="@font/open_sans"
            android:padding="10dp"
            android:id="@+id/text_ship_placed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout"
            android:textColor="@color/colorGrey"
            android:textSize="12sp"
            android:text="Shipped out to Sarawak" />

        <LinearLayout
            android:visibility="gone"
            android:layout_below="@id/text_ship_placed"
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:visibility="gone"
                android:id="@+id/btn_cancel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/login_part_border_orange"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Accept" />

            <Button
                android:id="@+id/btn_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/login_part_border_orange"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/open_sans_semibold"
                android:text="View" />

            <Button
                android:id="@+id/btn_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/login_part_border_orange"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Reject" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:fontFamily="@font/open_sans_bold"
            android:padding="10dp"
            android:id="@+id/withText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear2"
            android:textColor="@color/colorGrey"
            android:textSize="14sp"
            android:text="Pos Laju Tracking No." />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@id/withText"
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_no_radius">

            <EditText
                android:layout_below="@id/linear2"
                android:id="@+id/editText_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Pos Laju Tacking No." />
        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_part_border_orange"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Submit" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_submit"
            android:layout_marginTop="5dp"
            android:background="@drawable/login_part_border_orange"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Cancel" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>