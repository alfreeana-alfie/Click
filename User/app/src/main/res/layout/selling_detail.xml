<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/text_order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:padding="5dp"
            android:text="Order ID"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <ImageView
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/text_order_id"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:layout_marginEnd="15dp"
            android:id="@+id/text_ad_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_order_id"
            android:layout_toEndOf="@id/photo"
            android:fontFamily="@font/open_sans_semibold"
            android:padding="10dp"
            android:text="Ad Detail"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <TextView
            android:layout_marginEnd="15dp"
            android:id="@+id/text_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/text_quantity"
            android:layout_toEndOf="@id/photo"
            android:fontFamily="@font/open_sans"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="MYR0.00"
            android:textColor="@color/colorGrey"
            android:textSize="12sp" />

        <TextView
            android:layout_marginEnd="15dp"
            android:id="@+id/text_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/linearLayout"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/open_sans"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="x1"
            android:textColor="@color/colorGrey"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_placed_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:padding="10dp"
                android:text="Placed on YYYY-MM-DD"
                android:textColor="@color/colorGrey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:padding="10dp"
                android:text="Status"
                android:textAlignment="textEnd"
                android:textColor="@color/colorGrey"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/open_sans"
            android:padding="10dp"
            android:id="@+id/text_ship_placed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout"
            android:textColor="@color/colorGrey"
            android:textSize="12sp"
            android:text="Shipped out to Sarawak" />

        <LinearLayout
            android:visibility="gone"
            android:layout_below="@id/text_ship_placed"
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:visibility="gone"
                android:id="@+id/btn_cancel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/login_part_border_orange"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Accept" />

            <Button
                android:id="@+id/btn_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/login_part_border_orange"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/open_sans_semibold"
                android:text="View" />

            <Button
                android:id="@+id/btn_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/login_part_border_orange"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Reject" />
        </LinearLayout>

        <TextView
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/open_sans_bold"
            android:padding="10dp"
            android:id="@+id/withText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrey"
            android:textSize="14sp"
            android:layout_below="@id/text_ship_placed"
            android:text="Pos Laju Tracking No." />

        <RelativeLayout
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@id/withText"
            android:id="@+id/relative3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="0dp"
                android:fontFamily="@font/open_sans_semibold"
                android:padding="10dp"
                android:id="@+id/pl"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrey"
                android:textSize="16sp"
                android:text="PL" />

            <RelativeLayout
                android:id="@+id/textView3"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/pl"
                android:background="@drawable/background_white_full_curves">

                <EditText
                    android:id="@+id/editText_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:layout_centerVertical="true"
                    android:inputType="text"
                    android:hint="Pos Laju Tacking No." />
            </RelativeLayout>

        </RelativeLayout>

        <Button
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative3"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_part_border_orange"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Submit" />

        <Button
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_submit"
            android:layout_marginTop="5dp"
            android:background="@drawable/login_part_border_orange"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Cancel" />

        <ProgressBar
            android:layout_below="@id/btn_cancel"
            android:layout_centerHorizontal="true"
            android:id="@+id/loading"
            android:padding="10dp"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminateTintMode="src_atop" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            app:labelVisibilityMode="labeled"
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorWhite"
            app:menu="@menu/bottom_menu"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>