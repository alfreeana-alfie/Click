<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_orange"
    android:orientation="vertical">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/background_white_full_curves"
        app:iconifiedByDefault="false"
        app:queryBackground="@android:color/white"
        app:queryHint="Search Here"
        app:searchHintIcon="@color/colorWhite" />

    <TableLayout
        android:id="@+id/table_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_find"
        android:background="@drawable/background_orange"
        android:stretchColumns="1,2,3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <TextView
                android:id="@+id/location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/division"
                android:textAlignment="center"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/district"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/district"
                android:textAlignment="center"
                android:textColor="@color/colorAccent" />


            <TextView
                android:id="@+id/price_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/price_rm"
                android:textAlignment="center"
                android:textColor="@color/colorAccent" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_division"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/but_division"
                    android:backgroundTint="@color/colorAccent"
                    android:prompt="@string/location"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/but_division"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/colorPrimary"
                    app:srcCompat="@drawable/ic_exit_gray_foreground" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_district"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/but_district"
                    android:backgroundTint="@color/colorAccent"
                    android:prompt="@string/location"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/but_district"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/colorPrimary"
                    app:srcCompat="@drawable/ic_exit_gray_foreground" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="3">

                <Button
                    android:id="@+id/price_sortlowest"
                    style="@style/MyButtonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_down_foreground"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/price"
                    android:textColor="@color/colorAccent"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/price_sorthighest"
                    style="@style/MyButtonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_up_foreground"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="Price"
                    android:textColor="@color/colorAccent"
                    android:textSize="13sp" />
            </RelativeLayout>

        </TableRow>

    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/table_filter"
        android:background="@drawable/background_white_curve">

        <GridView
            android:id="@+id/gridView_CarItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnWidth="80dp"
            android:elevation="5dp"
            android:horizontalSpacing="5dp"
            android:numColumns="2"
            android:paddingStart="5dp"
            android:paddingTop="40dp"
            android:paddingEnd="5dp"
            android:paddingBottom="7dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp" />

    </RelativeLayout>


</RelativeLayout>