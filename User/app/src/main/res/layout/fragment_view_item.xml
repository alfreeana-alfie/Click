                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/layout_border_white"
                    android:drawableTop="@mipmap/ic_cars"
                    android:fontFamily="@font/open_sans_bold"
                    android:padding="5dp"
                    android:text="@string/cars"
                    android:textAllCaps="false"
                    android:textSize="9sp"
                    tools:ignore="SmallSp" />

                <Button
                    android:id="@+id/button_sales"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/layout_border_white"
                    android:drawableTop="@mipmap/ic_sale"
                    android:fontFamily="@font/open_sans_bold"
                    android:padding="5dp"
                    android:text="@string/properties_for_sale"
                    android:textAllCaps="false"
                    android:textSize="9sp"
                    tools:ignore="SmallSp" />

<!--                <Button-->
<!--                    android:layout_width="110dp"-->
<!--                    android:layout_height="110dp"-->
<!--                    android:layout_margin="5dp"-->
<!--                    android:background="@drawable/layout_border_white"-->
<!--                    android:drawableTop="@mipmap/ic_jobs"-->
<!--                    android:fontFamily="@font/open_sans_bold"-->
<!--                    android:padding="5dp"-->
<!--                    android:text="@string/jobs"-->
<!--                    android:textAllCaps="false"-->
<!--                    android:textSize="9sp"-->
<!--                    tools:ignore="SmallSp" />-->

                <Button
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/layout_border_white"
                    android:drawableTop="@mipmap/ic_pets"
                    android:fontFamily="@font/open_sans_bold"
                    android:padding="5dp"
                    android:text="@string/pets"
                    android:textAllCaps="false"
                    android:textSize="9sp"
                    tools:ignore="SmallSp" />

                <Button
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/layout_border_white"
                    android:drawableTop="@mipmap/ic_men"
                    android:fontFamily="@font/open_sans_bold"
                    android:padding="5dp"
                    android:text="@string/men_collection"
                    android:textAllCaps="false"
                    android:textSize="9sp"
                    tools:ignore="SmallSp" />

                <Button
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/layout_border_white"
                    android:drawableTop="@mipmap/ic_momkids"
