                    android:textSize="9sp"
                    tools:ignore="SmallSp" />

                <Button
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/layout_border_white"
                    android:drawableTop="@mipmap/ic_business"
                    android:fontFamily="@font/open_sans_bold"
                    android:padding="5dp"
                    android:text="@string/business_for_sale"
                    android:textAllCaps="false"
                    android:textSize="9sp"
                    tools:ignore="SmallSp" />

                <Button
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/layout_border_white"
                    android:drawableTop="@mipmap/ic_handcraft"
                    android:fontFamily="@font/open_sans_bold"
                    android:padding="5dp"
                    android:text="@string/handcraft"
                    android:textAllCaps="false"
                    android:textSize="9sp"
                    tools:ignore="SmallSp" />

                <Button
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/layout_border_orange"
                    android:drawableTop="@mipmap/ic_see_all_round"
                    android:fontFamily="@font/open_sans_bold"
                    android:padding="5dp"
                    android:text="@string/see_all"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />
            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <com.mhmtk.twowaygrid.TwoWayGridView
        android:id="@+id/gridView_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cacheColorHint="#E8E8E8"
        android:columnWidth="800dp"
        app:rowHeight="80dp"
        app:numRows="1"
        app:numColumns="2"
        app:verticalSpacing="16dp"
        app:horizontalSpacing="1dp"
        app:stretchMode="columnWidth"
        app:scrollDirectionPortrait="vertical"
        app:scrollDirectionLandscape="horizontal"
        app:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grid_category"/>

</androidx.constraintlayout.widget.ConstraintLayout>