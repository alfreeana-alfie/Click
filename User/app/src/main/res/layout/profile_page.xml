<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:background="@color/colorAccent"
            android:layout_below="@id/appbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/colorPrimary"
                    android:padding="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_person_foreground" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignBottom="@id/profile_image"
                        android:padding="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@id/profile_image"
                        android:text="Name" />
                </RelativeLayout>

                <LinearLayout
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:id="@+id/upper_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/myLikeImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:srcCompat="@mipmap/ic_add" />

                        <TextView
                            android:layout_marginStart="10dp"
                            android:id="@+id/myLikeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Likes" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLightGrey" />

                    <TableRow
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/RecentlyViewedImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:srcCompat="@mipmap/ic_add" />

                        <TextView
                            android:layout_marginStart="10dp"
                            android:id="@+id/RecentlyViewedText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recently Viewed" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLightGrey" />

                    <TableRow
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/BuyingImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:srcCompat="@mipmap/ic_add" />

                        <TextView
                            android:layout_marginStart="10dp"
                            android:id="@+id/BuyingText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buying" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLightGrey" />

                    <TableRow
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/SellingImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:srcCompat="@mipmap/ic_add" />

                        <TextView
                            android:layout_marginStart="10dp"
                            android:id="@+id/SellingText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selling" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLightGrey" />

                    <TableRow
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/MyRatingImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:srcCompat="@mipmap/ic_add" />

                        <TextView
                            android:layout_marginStart="10dp"
                            android:id="@+id/MyRatingText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Rating" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLightGrey" />

                    <TableRow
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/IncomeImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:srcCompat="@mipmap/ic_add" />

                        <TextView
                            android:layout_marginStart="10dp"
                            android:id="@+id/IncomeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Income" />
                    </TableRow>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="10dp"
                    android:id="@+id/lower_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/AccountSettingImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:srcCompat="@mipmap/ic_add" />

                        <TextView
                            android:layout_marginStart="10dp"
                            android:id="@+id/AccountSettingText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account Settings" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLightGrey" />

                    <TableRow
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/HelpCentreImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:srcCompat="@mipmap/ic_add" />

                        <TextView
                            android:layout_marginStart="10dp"
                            android:id="@+id/HelpCentreText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Help Centre" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLightGrey" />

                    <TableRow
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ChatwithShoppeeImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:srcCompat="@mipmap/ic_add" />

                        <TextView
                            android:layout_marginStart="10dp"
                            android:id="@+id/ChatwithShoppeeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chat with KetekMall" />
                    </TableRow>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>