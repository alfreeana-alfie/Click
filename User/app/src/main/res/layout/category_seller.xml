<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:elevation="0dp"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_margin="5dp"
        android:padding="5dp"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_full_curves"
        android:layout_below="@id/appbar">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/seller_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/seller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/seller_image"
            android:padding="5dp"
            android:text="Seller Name" />

        <TextView
            android:id="@+id/seller_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seller_name"
            android:layout_toEndOf="@id/seller_image"
            android:padding="5dp"
            android:text="Seller Location" />


        <Button
            android:id="@+id/btn_chat"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/login_part_border_orange"
            android:text="Chat"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:padding="5dp"
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_full_curves"
        android:layout_below="@id/relativeLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:text="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/colorGrey"
                android:textSize="16sp"
                android:text="Products" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/sold_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:text="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/colorGrey"
                android:textSize="16sp"
                android:text="Sold" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/category_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout2">

        <TableLayout
            android:visibility="gone"
            android:id="@+id/table_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_orange"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone">

                <TextView
                    android:id="@+id/price_range"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/price_rm"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1">

                    <Button
                        android:id="@+id/price_sortlowest"
                        style="@style/MyButtonStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_down_foreground"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="@string/price"
                        android:textColor="@color/colorAccent"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/price_sorthighest"
                        style="@style/MyButtonStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_up_foreground"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="Price"
                        android:textColor="@color/colorAccent"
                        android:textSize="13sp" />
                </RelativeLayout>

            </TableRow>

        </TableLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/table_filter"
            android:background="@drawable/background_white_curve">

            <TextView
                android:id="@+id/textView35"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/colorGrey"
                android:textSize="14sp"
                android:text="List of Product(s)"/>

            <GridView
                android:layout_below="@id/textView35"
                android:id="@+id/gridView_CarItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnWidth="80dp"
                android:elevation="5dp"
                android:horizontalSpacing="5dp"
                android:numColumns="2"
                android:paddingStart="5dp"
                android:paddingTop="20dp"
                android:paddingEnd="5dp"
                android:paddingBottom="7dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/filter_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Filter"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

        </com.google.android.material.appbar.AppBarLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appbar1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/division_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/division"
                android:textColor="@color/colorGrey"
                android:textSize="14sp"
                android:textStyle="bold|italic" />

            <Spinner
                android:id="@+id/spinner_division"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/division_display"
                android:background="@drawable/bg_spinner"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:spinnerMode="dropdown" />


            <TextView
                android:id="@+id/district_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner_division"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/district"
                android:textColor="@color/colorGrey"
                android:textSize="14sp"
                android:textStyle="bold|italic" />

            <Spinner
                android:id="@+id/spinner_district"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/district_display"
                android:background="@drawable/bg_spinner"
                android:paddingStart="10dp"

                android:paddingEnd="10dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/login_part_border_orange"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/back"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_apply"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/login_part_border_orange"
                    android:fontFamily="@font/montserrat"
                    android:text="Apply"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp" />
            </TableRow>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>