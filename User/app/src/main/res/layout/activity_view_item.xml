<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_white">


    <ImageView
        android:id="@+id/img_item"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/background_white"
        android:contentDescription="@string/item_image"
        tools:srcCompat="@tools:sample/avatars[1]" />

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_item"
        android:background="@drawable/background_orange_curve"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ad_details_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/colorPrimaryDark"
            android:paddingStart="40dp"
            android:paddingTop="15dp"
            android:paddingEnd="40dp"
            android:paddingBottom="15dp"
            android:text="@string/ad_details"
            android:textAlignment="textStart"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/price_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/open_sans_bold"
            android:paddingStart="40dp"
            android:paddingTop="0dp"
            android:paddingEnd="40dp"
            android:paddingBottom="15dp"
            android:text="@string/price_rm"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp" />

        <RelativeLayout
            android:background="@drawable/background_white_curve"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">


            <LinearLayout
                android:id="@+id/linear_stock"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="40dp"
                android:paddingTop="15dp"
                android:paddingEnd="40dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/avail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="Stock: "
                    android:textColor="@color/colorGreen"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/avail1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/available"
                    android:textColor="@color/colorGreen"
                    android:textSize="14sp"
                    tools:ignore="RelativeOverlap" />
            </LinearLayout>

            <LinearLayout
                android:layout_alignParentStart="true"
                android:layout_below="@id/linear_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="40dp"
                android:paddingTop="15dp"
                android:paddingEnd="40dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="Rating: "
                    android:textColor="@color/colorGreen"
                    android:textSize="14sp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:rating="4"
                    android:theme="@style/MyRatingBar" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/open_sans"
                android:text="@string/write_your_review"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:paddingStart="40dp"
                android:paddingTop="15dp"
                android:paddingEnd="40dp"
                android:paddingBottom="5dp"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:id="@+id/contact_seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:fontFamily="@font/open_sans"
                android:layout_alignParentEnd="true"
                android:paddingStart="40dp"
                android:paddingTop="15dp"
                android:paddingEnd="40dp"
                android:paddingBottom="5dp"
                android:text="Contact to Seller"
                android:textColor="@color/colorBlue" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:paddingTop="5dp"
        android:background="@drawable/background_button_pink_curves"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_to_cart_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/open_sans"
            android:paddingEnd="40dp"
            android:paddingStart="40dp"
            android:textAlignment="center"
            android:text="@string/add_to_cart" />

    </LinearLayout>
</RelativeLayout>