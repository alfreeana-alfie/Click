<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:elevation="0dp"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_margin="5dp"
        android:padding="5dp"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/background_white_full_curves"
        android:layout_below="@id/appbar">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/seller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image"
            android:layout_toStartOf="@id/btn_chat_wsp"
            android:padding="5dp"
            android:text="@string/seller_name" />

        <TextView
            android:id="@+id/seller_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seller_name"
            android:layout_toEndOf="@id/image"
            android:layout_toStartOf="@id/btn_chat_wsp"
            android:padding="5dp"
            android:text="@string/seller_location" />

        <ImageButton
            android:id="@+id/btn_chat_wsp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/btn_chat"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:srcCompat="@mipmap/ic_whatsapp_foreground" />

        <ImageButton
            android:id="@+id/btn_chat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:srcCompat="@drawable/ic_chat_orange_foreground"
            android:text="@string/chat"
            android:textColor="@color/colorWhite"
            tools:ignore="VectorDrawableCompat" />

    </RelativeLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:padding="5dp"
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/background_white_full_curves"
        android:layout_below="@id/relativeLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:text="@string/_0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/colorGrey"
                android:textSize="16sp"
                android:text="@string/products" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/sold_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:text="@string/_0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/colorGrey"
                android:textSize="16sp"
                android:text="@string/sold" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_above="@id/bottom_nav"
        android:layout_marginTop="5dp"
        android:id="@+id/category_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout2">

        <TableLayout
            android:visibility="gone"
            android:id="@+id/table_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/background_orange"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone">

                <TextView
                    android:id="@+id/price_range"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/price_rm"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1">

                    <Button
                        android:id="@+id/price_sortlowest"
                        style="@style/MyButtonStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_down_foreground"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="@string/price"
                        android:textColor="@color/colorAccent"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/price_sorthighest"
                        style="@style/MyButtonStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_up_foreground"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="@string/price"
                        android:textColor="@color/colorAccent"
                        android:textSize="13sp" />
                </RelativeLayout>

            </TableRow>

        </TableLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/table_filter"
            android:background="@mipmap/background_white_curve">

            <TextView
                android:id="@+id/textView35"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/colorGrey"
                android:textSize="14sp"
                android:text="@string/list_of_product_s"/>

            <ProgressBar
                android:id="@+id/loading_shock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:indeterminate="true"
                android:indeterminateTint="@color/colorPrimary"
                android:indeterminateTintMode="src_atop"/>

            <GridView
                android:layout_below="@id/textView35"
                android:id="@+id/gridView_CarItem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:columnWidth="80dp"
                android:background="@color/colorAccent"
                android:elevation="5dp"
                android:horizontalSpacing="5dp"
                android:numColumns="2"
                android:paddingStart="5dp"
                android:paddingTop="20dp"
                android:paddingEnd="5dp"
                android:paddingBottom="7dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/filter_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/filter"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

        </com.google.android.material.appbar.AppBarLayout>

    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        app:labelVisibilityMode="labeled"
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        app:menu="@menu/bottom_menu"/>
</RelativeLayout>