<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_orange"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_person_foreground" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="username"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/username"
            android:layout_below="@id/profile_image"
            android:background="@drawable/background_pink_full_curve"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Verification"
            android:textAllCaps="true"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/open_sans_semibold"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/greeting"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/welcome_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_text"
            android:fontFamily="@font/open_sans_semibold"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/buy_sell_find_almost_everything"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_sellItem"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button_sell_border"
                android:drawableEnd="@drawable/ic_camera_foreground"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/sell"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp" />


            <Button
                android:id="@+id/button_FindItem"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_find_border"
                android:drawableEnd="@drawable/ic_search_foreground"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/find"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout"
        android:layout_above="@+id/bottom_nav"
        android:background="@drawable/background_white_curve">

        <ScrollView
            android:id="@+id/grid_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_white_curve"
                android:orientation="vertical">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/browse_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/open_sans_light"
                        android:text="Browse Categories"
                        android:textAllCaps="true"
                        android:textColor="@color/colorGrey"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/button_see"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/open_sans_light"
                        android:text="@string/see_all"
                        android:textAllCaps="false"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                </RelativeLayout>

                <HorizontalScrollView
                    android:id="@+id/category_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:columnCount="10"
                        app:rowCount="3">

                        <Button
                            android:id="@+id/button_cars"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_cars"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/cars"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_sales"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_sale"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/properties_for_sale"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_pets"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_pets"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/pets"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_men"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_men"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/men_collection"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_mom"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_momkids"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/mom_and_kids"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_women"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_women"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/women_collection"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_home"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_home"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/home_appliances"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_services"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_services"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/services"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_travel"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_travel"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/travel_and_holiday"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_elect"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_electronics"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/electronics"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_rent"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_rent"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/properties_for_rent"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_furniture"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_furniture"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/furniture"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_sports"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_sport"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/sport_and_hobbies"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_motors"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_motorcycles"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/motorcycles"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_car_parts"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_car"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/car_accessories_and_parts"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_camera"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_cameraphoto"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/camera_and_photography"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_computer"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_computer"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/computer_and_accessories"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_business"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_business"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/business_for_sale"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_handcraft"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_handcraft"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/handcraft"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_food"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_food"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/food"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_grocery"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_white"
                            android:drawableTop="@mipmap/ic_grocery"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/grocery"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <Button
                            android:id="@+id/button_see2"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/layout_border_orange"
                            android:drawableTop="@mipmap/ic_see_all_round"
                            android:fontFamily="@font/open_sans_bold"
                            android:padding="5dp"
                            android:text="@string/see_all"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:visibility="gone" />
                    </androidx.gridlayout.widget.GridLayout>
                </HorizontalScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_white_curve">

                    <com.mhmtk.twowaygrid.TwoWayGridView
                        android:id="@+id/gridView_HardSelling"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_margin="15dp"
                        android:background="@color/colorWhite"
                        app:cacheColorHint="@color/colorWhite"
                        app:columnWidth="80dp"
                        app:gravity="center"
                        app:horizontalSpacing="5dp"
                        app:numColumns="auto_fit"
                        app:numRows="1"
                        app:rowHeight="200dp"
                        app:scrollDirectionLandscape="horizontal"
                        app:scrollDirectionPortrait="horizontal"
                        app:stretchMode="columnWidth"
                        app:verticalSpacing="5dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_white_curve">

                    <com.mhmtk.twowaygrid.TwoWayGridView
                        android:id="@+id/gridView_TopSelling"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_margin="15dp"
                        android:background="@color/colorWhite"
                        app:cacheColorHint="@color/colorWhite"
                        app:columnWidth="80dp"
                        app:gravity="center"
                        app:horizontalSpacing="5dp"
                        app:numColumns="auto_fit"
                        app:numRows="1"
                        app:rowHeight="200dp"
                        app:scrollDirectionLandscape="horizontal"
                        app:scrollDirectionPortrait="horizontal"
                        app:stretchMode="columnWidth"
                        app:verticalSpacing="5dp" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        app:menu="@menu/bottom_menu"/>
</RelativeLayout>