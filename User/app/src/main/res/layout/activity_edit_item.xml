<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <LinearLayout
        android:id="@+id/item_page_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/uploaded_photo"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/upload_photo"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary"
                    app:srcCompat="@drawable/ic_photo_black_foreground" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/login_part_border"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/open_sans_bold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/category"
                android:textSize="16sp" />

                <TextView
                    android:id="@+id/enter_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="textEnd"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:clickable="true"
                    android:focusable="true"

                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:hint="Main"
                    android:textSize="16sp" />
                <TextView
                    android:visibility="invisible"
                    android:id="@+id/enter_main_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="textEnd"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:clickable="true"
                    android:focusable="true"

                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:hint="Main"
                    android:textSize="16sp" />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/enter_sub_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:clickable="true"
                    android:focusable="true"

                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:hint="Sub"
                    android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/login_part_border"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_ad_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/open_sans_bold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/ad_details"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/enter_ad_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:hint="Enter Ad Details"
                android:textAlignment="textEnd"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/login_part_border"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/price_rm"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/enter_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:background="@null"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:hint="@string/price_rm"
                android:textCursorDrawable="@drawable/color_cursor"
                android:inputType="numberDecimal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAlignment="textEnd"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/login_part_border"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_location_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/item_location"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_item_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminateTintMode="src_atop"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_edit_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_part_border_orange"
            android:fontFamily="@font/montserrat"
            android:text="@string/accept"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/back_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/login_part_border_orange"
            android:fontFamily="@font/montserrat"
            android:text="@string/back"
            android:textSize="18sp"/>
    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/category_page_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:elevation="5dp"
        android:background="@drawable/login_part_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/category_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:text="Add Product"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp"
                android:textStyle="bold" />

            <View
                android:layout_width="100dp"
                android:layout_height="5dp"
                android:layout_below="@id/textView"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_part_border_orange" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Select a Category"
                android:textAlignment="center"
                android:textColor="@color/colorGrey"
                android:textSize="16sp"
                android:textStyle="bold|italic" />
        </LinearLayout>


        <TextView
            android:id="@+id/main_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="Main Category"
            android:textColor="@color/colorGrey"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            android:layout_below="@+id/category_text_layout" />

        <Spinner
            android:id="@+id/spinner_main_category"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_below="@id/main_cat"
            android:background="@drawable/bg_spinner"
            android:spinnerMode="dropdown" />


        <TextView
            android:id="@+id/sub_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="Sub Category"
            android:textColor="@color/colorGrey"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            android:layout_below="@id/spinner_main_category" />
        <Spinner
            android:id="@+id/spinner_sub_category"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_below="@id/sub_cat"

            android:background="@drawable/bg_spinner" />

        <Button
            android:id="@+id/accept_category"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/spinner_sub_category"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_part_border_orange"
            android:fontFamily="@font/montserrat"
            android:text="@string/accept"
            android:textSize="14sp" />

        <Button
            android:id="@+id/back_category"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/accept_category"
            android:layout_marginTop="5dp"
            android:background="@drawable/login_part_border_orange"
            android:fontFamily="@font/montserrat"
            android:text="@string/back"
            android:textSize="14sp" />


    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:background="@drawable/login_part_border"
        android:id="@+id/ad_detail_page_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ad_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/colorPrimaryDark"
                android:text="Add Product"
                android:textAllCaps="true"
                android:textSize="25sp"
                android:textStyle="bold" />

            <View
                android:layout_width="100dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@id/textView"
                android:background="@drawable/login_part_border_orange" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What are you selling?"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textColor="@color/colorGrey"
                android:textSize="16sp"
                android:textStyle="bold|italic" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/ad_detail_relative_layout"
            android:layout_width="match_parent"
            android:layout_below="@id/ad_text_layout"
            android:layout_height="300dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border">

            <EditText
                android:id="@+id/edittext_ad_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:hint="@string/please_enter_an_ad_detail"
                android:inputType="textMultiLine"
                android:padding="15dp"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textAlignment="textStart" />

        </RelativeLayout>

        <Button
            android:id="@+id/accept_ad_detail"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/montserrat"
            android:textSize="14sp"
            android:background="@drawable/login_part_border_orange"
            android:layout_below="@id/ad_detail_relative_layout"
            android:text="@string/accept" />

        <Button
            android:id="@+id/back_ad_detail"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/montserrat"
            android:textSize="14sp"
            android:background="@drawable/login_part_border_orange"
            android:layout_below="@id/accept_ad_detail"
            android:text="@string/back" />
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>