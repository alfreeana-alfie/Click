<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_find"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:queryBackground="@android:color/transparent"

            android:background="@drawable/background_white"
            app:iconifiedByDefault="false"
            app:queryHint="Search Here" />

    <TableLayout
        android:layout_below="@id/search_find"
        android:background="@drawable/background_white"
        android:id="@+id/table_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:fontFamily="@font/open_sans"
                android:text="@string/location"
                android:textAlignment="center" />


            <TextView

                android:id="@+id/price_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:fontFamily="@font/open_sans"
                android:text="@string/price_rm"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_column="1">

                <Spinner
                    android:id="@+id/spinner_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/but_loc"
                    android:textAlignment="center"
                    android:prompt="@string/location" />

                <ImageButton
                    android:id="@+id/but_loc"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@android:color/white"
                    app:srcCompat="@drawable/ic_exit_gray_foreground" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_column="2"
                android:layout_height="wrap_content"
                android:layout_width="0dp">

                <Button
                    android:id="@+id/price_sortlowest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:drawableEnd="@drawable/ic_down_foreground"
                    android:textSize="12sp"
                    android:textColor="@color/colorGrey"
                    android:text="Lowest Price" />

                <Button
                    android:id="@+id/price_sorthighest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:drawableEnd="@drawable/ic_up_foreground"
                    android:textSize="12sp"
                    android:textColor="@color/colorGrey"
                    android:text="Highest Price" />
            </RelativeLayout>

        </TableRow>

    </TableLayout>

        <GridView
            android:id="@+id/gridView_CarItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnWidth="80dp"
            android:horizontalSpacing="1dp"
            android:numColumns="2"
            android:stretchMode="columnWidth"
            android:verticalSpacing="1dp"
            android:layout_below="@id/table_filter"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>