<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:elevation="0dp"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </com.google.android.material.appbar.AppBarLayout>


        <TextView
            android:visibility="gone"
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/open_sans"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="5dp"
            android:text="@string/before_you_can_start_selling_your_products" />

        <TextView
            android:visibility="gone"
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/textView8"
            android:fontFamily="@font/open_sans"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="5dp"
            android:text="@string/you_need_to_register_as_ketekmall_seller" />

        <TextView
            android:visibility="gone"
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/open_sans"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="5dp"
            android:text="Your Account has been blocked!" />

        <TextView
            android:visibility="gone"
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/textView10"
            android:fontFamily="@font/open_sans"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="5dp"
            android:text="Please Contact Administrator for more details." />

        <Button
            android:visibility="gone"
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/become_a_seller_today"
            android:layout_below="@id/textView9"
            android:background="@mipmap/login_part_border_orange"
            android:textColor="@color/colorWhite"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_centerHorizontal="true"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            app:labelVisibilityMode="labeled"
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorWhite"
            app:menu="@menu/bottom_menu"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>